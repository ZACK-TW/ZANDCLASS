// 側邊欄樣式
.sidebar
  background-color #f8f9fa
  
  .sidebar-heading
    padding-left 1rem
    font-size 1.1em
    font-weight 700
    
  .sidebar-link
    padding 0.35rem 1rem 0.35rem 1.25rem
    font-size 0.95em
    
    &.active
      border-left-color $accentColor
      
    &:hover
      color $accentColor

// 內容區域樣式
.theme-default-content
  font-size 16px
  
  h1
    font-size 2rem
    
  h2
    font-size 1.65rem
    padding-bottom 0.3rem
    border-bottom 1px solid $borderColor
    
  h3
    font-size 1.35rem
    
  a.header-anchor
    font-size 0.85em
    float left
    margin-left -0.87em
    padding-right 0.23em
    margin-top 0.125em
    opacity 0
    
    &:hover
      text-decoration none
      
  h1, h2, h3, h4, h5, h6
    &:hover .header-anchor
      opacity 1

// 代碼塊樣式
div[class*="language-"]
  background-color $codeBgColor
  border-radius 6px
  
  pre, pre[class*="language-"]
    padding 1.25rem 1.5rem
    margin 0.85rem 0
    overflow auto
    
  code
    color #fff
    padding 0
    background-color transparent
    border-radius 0

// 導航欄樣式
.navbar
  box-shadow 0 1px 6px 0 rgba(32, 33, 36, .28)
  
  .site-name
    font-size 1.3rem
    font-weight 600
    
  .nav-links
    .nav-item
      margin-left 1.5rem